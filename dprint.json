{
  "$schema": "https://dprint.dev/schemas/v0.json",
  "incremental": true,
  "extends": [],
  "plugins": [
    "https://plugins.dprint.dev/json-0.19.4.wasm",
    "https://plugins.dprint.dev/markdown-0.17.8.wasm",
    "https://plugins.dprint.dev/g-plane/pretty_yaml-v0.5.0.wasm"
  ],
  "includes": [
    "**/*.{json,md,yaml,yml}"
  ],
  "excludes": [
    "**/.terraform",
    "**/.ansible",
    "**/.git",
    "**/.vale"
  ],
  "json": {
    "indentWidth": 2,
    "lineWidth": 120,
    "useTabs": false,
    "trailingCommas": "never"
  },
  "markdown": {
    "lineWidth": 160,
    "textWrap": "maintain"
  },
  "yaml": {
    "indentWidth": 2,
    "quotes": "preferDouble",
    "trailingComma": false
  }
}
